{
    "private": true,
    "engines": {
        "node": ">=16"
    },
    "workspaces": {
        "packages": [
            "backend",
            "frontend"
        ]
    },
    "scripts": {
        "build": "npm-run-all --sequential build:backend build:frontend",
        "build:backend": "npm run workspace @davydocsurg-newshive/backend build",
        "build:frontend": "npm workspace @davydocsurg-newshive/frontend build",
        "dev": "npm-run-all --parallel dev:backend dev:frontend",
        "dev:backend": "npm run workspace @davydocsurg-newshive/backend dev",
        "dev:frontend": "npm run workspace @davydocsurg-newshive/frontend dev",
        "test": "npm-run-all --sequential test:backend test:frontend",
        "test:backend": "npm run workspace @davydocsurg-newshive/backend test",
        "test:frontend": "npm run workspace @davydocsurg-newshive/frontend test"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5"
    }
}
